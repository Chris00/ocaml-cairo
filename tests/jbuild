(jbuild_version 1)

(executables
 ((names     (image_create matrix_set surface_gc test_for_stream
              test_finish test_path test_exn))
  (libraries (cairo2))))

(alias
 ((name runtest)
  (deps (image_create.exe matrix_set.exe surface_gc.exe test_for_stream.exe
         test_finish.exe test_path.exe test_exn.exe))
  (action (progn
           (run ${path:image_create.exe})
           (run ${path:matrix_set.exe})
           (run ${path:surface_gc.exe})
           (run ${path:test_for_stream.exe})
           (run ${path:test_finish.exe})
           (run ${path:test_path.exe})
           (run ${path:test_exn.exe})))))
